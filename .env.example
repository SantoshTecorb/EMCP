# LLM Provider (auto, groq, openai, dummy)
LLM_PROVIDER=groq

# Groq API Key (preferred - fast and cost-effective)
GROQ_API_KEY=your-groq-api-key-here

# Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-here

# MySQL Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/mcp_db
MYSQL_USER=mcp_user
MYSQL_PASSWORD=your-mysql-password
MYSQL_DB=mcp_db
MYSQL_HOST=localhost
MYSQL_PORT=3306

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
DOCUMENTATION_SERVER_PORT=8001
TICKETS_SERVER_PORT=8002
RUNBOOKS_SERVER_PORT=8003
DASHBOARD_PORT=8080

# Embedding Configuration
EMBEDDING_MODEL=bge-large-en-v1.5
EMBEDDING_DEVICE=cpu  # or cuda/cuda:0 for GPU

# Logging Level
LOG_LEVEL=INFO
